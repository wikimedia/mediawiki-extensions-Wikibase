{
	"name": "wikibase/data-model-services",
	"type": "library",
	"description": "Services around the Wikibase DataModel",
	"keywords": [
		"Wikibase",
		"DataModel",
		"Wikidata"
	],
	"homepage": "https://github.com/wmde/WikibaseDataModelServices",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"support": {
		"irc": "irc://irc.freenode.net/wikidata"
	},
	"require": {
		"php": ">=5.5.9",
		"wikibase/data-model": "~7.0|~6.3",
		"data-values/data-values": "~0.1|~1.0",
		"diff/diff": "~2.0|~1.0",
		"wikimedia/assert": "~0.2.2"
	},
	"require-dev": {
		"phpmd/phpmd": "~2.3",
		"phpunit/phpunit": "~4.8",
		"wikibase/wikibase-codesniffer": "^0.1.0"
	},
	"autoload": {
		"psr-4": {
			"Wikibase\\DataModel\\Services\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "3.8.x-dev"
		}
	},
	"scripts": {
		"test": [
			"@validate --no-interaction",
			"phpunit --coverage-php /dev/null"
		],
		"cs": [
			"phpcs -p -s",
			"phpmd src/,tests/unit/ text phpmd.xml"
		],
		"ci": [
			"@cs",
			"@test"
		]
	}
}
