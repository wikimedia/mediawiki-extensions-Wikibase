{
	"name": "wikibase/internal-serialization",
	"type": "library",
	"description": "Serializers and deserializers for the data access layer of Wikibase Repository",
	"keywords": [
		"wikibase",
		"DataModel",
		"serializers",
		"serialization",
		"deserializers",
		"wikidata"
	],
	"homepage": "https://github.com/wmde/WikibaseInternalSerialization",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"support": {
		"irc": "irc://irc.freenode.net/wikidata"
	},
	"require": {
		"php": ">=5.3.0",
		"wikibase/data-model": "~3.0",
		"wikibase/data-model-serialization": "~1.4-dev",
		"serialization/serialization": "~3.2"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "~2.1",
		"phpmd/phpmd": "~2.1",
		"data-values/common": "~0.2.2",
		"data-values/geo": "~1.1",
		"data-values/number": "~0.4.0",
		"data-values/time": "~0.7.0"
	},
	"autoload": {
		"psr-4": {
			"Wikibase\\InternalSerialization\\": "src/"
		},
		"files" : [
			"mediawiki.php"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.4.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"phpunit"
		],
		"cs": [
			"composer phpcs",
			"composer phpmd"
		],
		"ci": [
			"composer test",
			"composer cs"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/ text phpmd.xml"
		]
	}
}
