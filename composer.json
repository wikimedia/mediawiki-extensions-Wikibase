{
	"name": "wikibase/wikibase",
	"type": "mediawiki-extension",
	"description": "Structured data repository for MediaWiki",
	"keywords": [
		"wikibase",
		"wikidata",
		"wikibaselib",
		"wikibaseclient",
		"wikibaserepo"
	],
	"homepage": "http://wikiba.se",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "The Wikidata team"
		}
	],
	"support": {
		"issues": "https://phabricator.wikimedia.org/",
		"irc": "irc://irc.freenode.net/wikidata"
	},
	"require": {
		"php": ">=5.6.99",
		"composer/installers": ">=1.0.1",
		"data-values/data-values": "^2.0.0|^1.0.0",
		"data-values/common": "^0.3.0|^0.4.0",
		"data-values/geo": "^2.0.1",
		"data-values/interfaces": "^0.2.0",
		"data-values/number": "^0.10.0",
		"data-values/time": "^0.8.4",
		"data-values/serialization": "^1.2.1",
		"wikibase/data-model": "^7.5.0",
		"wikibase/data-model-serialization": "^2.5.0",
		"wikibase/internal-serialization": "^2.2.0",
		"wikibase/data-model-services": "^3.10.0",
		"diff/diff": "^2.3.0",
		"wikimedia/purtle": "^1.0.7",
		"psr/simple-cache": "^1.0.1"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"jakub-onderka/php-console-highlighter": "0.3.2",
		"mediawiki/minus-x": "0.3.1",
		"wikibase/wikibase-codesniffer": "^0.3.0",
		"cache/integration-tests": "dev-master",
		"mediawiki/core": "dev-master",
		"phpunit/phpunit": "4.8.36 || ^6.5"
	},

	"autoload-dev": {
		"psr-4": {
			"Wikibase\\Lib\\": ["lib/includes"]
		}
	},
	"scripts": {
		"fix": "phpcbf",
		"test": [
			"composer validate --no-interaction",
			"parallel-lint . --exclude vendor --exclude node_modules --exclude .git",
			"phpcs -p -s",
			"minus-x check .",
			"@test-mediawiki-integration"
		],
		"test-mediawiki-integration": "phpunit --testsuite WikibaseMediawikiIntegrationTests"
	},
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "mediawiki/core",
				"version": "dev-master",
				"dist": {
					"url": "https://github.com/wikimedia/mediawiki/archive/master.zip",
					"type": "zip"
				},
				"autoload": {
					"classmap": [
						"includes/libs/objectcache"
					],
					"files": [
						"tests/phpunit/PHPUnit4And6Compat.php"
					]
				}
			}
		}
	],
	"config": {
		"process-timeout": 350
	}
}
